generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  trips     Trip[]
  createdAt DateTime @default(now())
}

model Trip {
  id        Int      @id @default(autoincrement())
  userId    Int
  from      String
  to        String
  mode      String
  distance  Float
  duration  Int
  cost      Float?
  date      DateTime
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
